#include <iostream>
using namespace std;

int sumUp(int n) {
    if (n <= 1)
        return n;
    else
        return n + sumUp(n-1);
}

int main() {
    int n;
    cout << "Enter a positive integer: ";
    cin >> n;
    int result = sumUp(n);
    cout << "Sum of integers from 1 to " << n << " = " << result << endl;
    return 0;
}

//OUTPUT:
//Enter a positive integer: 4
//Sum of integers from 1 to 4 = 10
