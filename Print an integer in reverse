#include <iostream>
using namespace std;

void printReverse(int n) {
    if (n == 0)
        return;
    cout << n % 10;
    printReverse(n / 10);
}

int main() {
    int num;
    cout << "Enter an integer: ";
    cin >> num;
    cout << "Reversed integer: ";
    printReverse(num);
    return 0;
}

//OUTPUT:
//Enter an integer: 9811
//Reversed integer: 1189
